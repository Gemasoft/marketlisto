<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gemasoft.marketlisto"
    android:versionCode="7"
    android:versionName="1.5"
    
     >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:description="@string/app_description"
        android:icon="@drawable/icon_big"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock"
        >
        <activity
            android:name="com.gemasoft.marketlisto.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gemasoft.marketlisto.CustomRow"
            android:label="@string/title_activity_custom_row" >
        </activity>
        <activity
            android:name="com.gemasoft.marketlisto.AddItem"
            android:label="@string/title_activity_add_item"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="com.gemasoft.marketlisto.StartActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gemasoft.marketlisto.SplashScreen" />
        </activity>
        <activity
            android:name="com.gemasoft.marketlisto.CaptureActivity"
            android:label="@string/title_activity_add_item"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
    </application>

</manifest>