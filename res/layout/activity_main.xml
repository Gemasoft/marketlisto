<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_gravity="top"
        android1:orientation="horizontal" >

        <Button
            android:id="@+id/btnSend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android1:layout_weight="1"
            android:onClick="addItem"
            android:text="@string/button_add_new" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android1:layout_weight="1"
            android:text="@string/button_clear" />

        <Button
            android1:id="@+id/btnDeleteAll"
            android1:layout_width="0dp"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android1:text="@string/button_delete_all" />
    </LinearLayout>

    <ListView
        android:id="@+id/mainlistView"
        style="android:listViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice" >

    </ListView>

</LinearLayout>
